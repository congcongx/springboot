<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xie.mapper.ProductMapper">

    <select id="selProductById" parameterType="integer" resultType="com.xie.domain.Product">
        SELECT
            product_id,
            product_name,
            price,
            stock,
            version
        FROM t_product
        WHERE  product_id = #{productId}
    </select>

</mapper>
